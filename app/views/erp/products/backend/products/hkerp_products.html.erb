<% content_for :title do %>
    HKErp products
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-archive"></i> HKErp products
<% end %>

<%= erp_datalist(
    url: erp_products.hkerp_products_list_backend_products_path,
    sortable: true,
    keywords: [
        {
            text: 'Name', name: 'products.cache_search'
        },
        {
            text: 'Category',
            name: 'categories.name',
            select: {
                name: 'categories.id',
                data_url: erp_products.hkerp_categories_dataselect_backend_products_path
            }
        },
        {
            text: 'Manufacturer',
            name: 'manufacturers.name',
            select: {
                name: 'manufacturers.id',
                data_url: erp_products.hkerp_manufacturers_dataselect_backend_products_path
            }
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-dollar"></i> Update price',
            url: erp_products.hkerp_update_price_backend_products_path,
            data_method: 'PUT',
            data_confirm: 'Update all price'
        },
    ],
    filters: [
        {
            text: 'Imported', name: 'products.erp_imported', value: 'true', checked: false
        },
        {
            text: 'New', name: 'products.erp_imported', value: 'false', checked: false
        },
        {
            divider: true
        },
        {
            text: 'Price updated', name: 'products.erp_price_updated', value: 'true', checked: false
        },
        {
            text: 'Price oudated', name: 'products.erp_price_updated', value: 'false', checked: false
        },
        {
            divider: true
        },
        {
            text: 'Suspended', name: 'products.suspended', value: 'true', checked: false
        },
        {
            text: 'Not suspended', name: 'products.suspended', value: 'false', checked: false
        },
        {
            divider: true
        },
        {
            text: 'Stock', name: 'stock', value: 'true', checked: false
        },
        {
            divider: true
        },
        {
            text: 'Trashed', name: 'products.status', value: 0, checked: false
        },
        {
            divider: true
        },
        {
            text: 'Outdated', name: 'out_of_date', value: 'true', checked: false
        },
        {
            text: 'Not-outdated', name: 'not_out_of_date', value: 'true', checked: false
        },
        {
            divider: true
        },
        {
            text: 'Sold-out', name: 'products.erp_sold_out', value: 'true', checked: false
        }
    ],
    sort: { sort_by: 'products.created_at', sort_direction: 'desc' }
) %>
